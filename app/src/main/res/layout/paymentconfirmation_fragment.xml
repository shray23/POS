<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layoutmargin"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/layoutmargin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_paymentmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin5dp"
                android:layout_marginEnd="@dimen/layoutmargin"
                android:text="CASH"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/smalltext12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layoutmargin"
                android:layout_marginEnd="@dimen/layoutmargin"
                android:text="7898662550"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="@dimen/heading18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_paymentmode" />

            <Button
                android:id="@+id/buttonback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iv20dp"
                android:layout_marginEnd="@dimen/margin12dp"
                android:background="@drawable/border"
                android:paddingHorizontal="@dimen/iv20dp"
                android:paddingVertical="@dimen/margin5dp"
                android:text="@string/back"
                android:textColor="@color/orange"
                android:textSize="@dimen/smalltext12sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/buttonconfirm"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_phoneno"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/buttonconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin12dp"
                android:layout_marginTop="@dimen/iv20dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/orange"
                android:paddingHorizontal="@dimen/iv20dp"
                android:paddingVertical="@dimen/margin5dp"
                android:text="@string/tv_continue"
                android:textColor="@color/white"
                android:textSize="@dimen/smalltext12sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/buttonback"
                app:layout_constraintTop_toBottomOf="@id/et_phoneno" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>